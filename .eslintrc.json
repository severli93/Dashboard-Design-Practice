{
    "extends": "standard",
    "rules": {
        "indent": ["error", 2],
        "semi": [1, "always"],
        "no-unused-vars": [1, "all"],
        "space-infix-ops": [0, "always"],
        "comma-spacing": [0, "always"],
        "quotes": [0, "always"],
        "no-undef": [0, "always"]
    }
}
